<scene>

  <image>
    600 600
  </image>

  <sampler type="JitteredSampler">
    <numSamplesU>4</numSamplesU>
    <numSamplesV>4</numSamplesV>
  </sampler>

  <renderer type="PhotonMapRenderer">
    <photonsPerLight>1000000</photonsPerLight>
  </renderer>

  <light type="PointLight">
      <location>278.0 300.0 0.0</location>
      <power>0.95 0.95 0.95</power>
   </light>

  <camera>
    <eye>278.0 273.0 -800.0</eye>
    <target>278.0 273.0 0</target>
    <up>0 1 0</up>
    <yFOV>40</yFOV>
  </camera>

  <material name="white" type="Homogeneous">
    <bsdf type="Transluscent">
      <reflectance>0.95 0.95 0.95</reflectance>
      <transmittance>0.05 0.05 0.05</transmittance>
    </bsdf>
  </material>
  
  <material name="red" type="Homogeneous">
    <bsdf type="Transluscent">
      <reflectance>0.95 0.0 0.0</reflectance>
      <transmittance>0.05 0.05 0.05</transmittance>
    </bsdf>
  </material>

  <material name="green" type="Homogeneous">
    <bsdf type="Transluscent">
      <reflectance>0.0 0.95 0.0</reflectance>
      <transmittance>0.05 0.05 0.05</transmittance>
    </bsdf>
  </material>

    <material name="cyan" type="Homogeneous">
    <bsdf type="Transluscent">
      <reflectance>0.0 0.85 0.85</reflectance>
      <transmittance>0.05 0.05 0.05</transmittance>
    </bsdf>
  </material>

  <material name="grey" type="Homogeneous">
    <bsdf type="Transluscent">
      <reflectance>0.75 0.75 0.75</reflectance>
      <transmittance>0.05 0.05 0.05</transmittance>
    </bsdf>
  </material>

  <!--material name="light" type="LambertianEmitter">
    <bsdf type="Transluscent">
      <reflectance>0.75 0.75 0.75</reflectance>
      <transmittance>0.75 0.75 0.75</transmittance>
    </bsdf>
    <radiance>60 60 60</radiance>
  </material-->


  <surface type="Mesh">
    <material ref="white" />
    <data>cbox-white.msh</data>
  </surface>

  <surface type="Mesh">
    <material ref="red" />
    <data>cbox-red.msh</data>
  </surface>
<!--
  <surface type="Mesh">
    <material ref="light" />
    <data>cbox-light.msh</data>
  </surface>
-->
  <surface type="Mesh">
    <material ref="green" />
    <data>cbox-green.msh</data>
  </surface>

  <surface type="Sphere">
    <material ref="cyan" />
    <center>278.0 273.0 0</center>
    <radius>10.0</radius>
  </surface>

  <background type="Uniform">
    <radiance>0.0 0.0 0.0</radiance>
  </background>

</scene>
