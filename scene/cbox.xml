    <radius>110.0</radius>
  </surface>

  <surface type="Sphere">
    <material ref="glass" />
    <center>158.0 110.0 140</center>
    <radius>110.0</radius>
  </surface>

    <surface type="Sphere">
    <material ref="glass" />
    <center>398.0 110.0 140</center>
